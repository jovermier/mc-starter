{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "typeRoots": ["./_utils/@types/global.d.ts"]
  },
  "include": ["./", "../lib/**/*.ts"],
  "exclude": ["node_modules"]
}
